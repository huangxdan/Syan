<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.LoginActivity">

    <include
        android:id="@+id/ll_navi"
        layout="@layout/public_navigation_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_240dp_hf"
        android:layout_below="@id/ll_navi"
        android:src="@drawable/login_logo1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_logo"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_70dp_hf"
            android:layout_marginLeft="@dimen/default_20dp_hf"
            android:layout_marginRight="@dimen/default_20dp_hf"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名："
                android:textColor="@color/black64"
                android:textSize="@dimen/default_16sp_hf" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户名"
                android:singleLine="true"
                android:textColor="@color/black64"
                android:textColorHint="@color/grayc8"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/default_16sp_hf"
                android:theme="@style/myEditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_70dp_hf"
            android:layout_marginLeft="@dimen/default_20dp_hf"
            android:layout_marginRight="@dimen/default_20dp_hf"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密   码："
                android:textColor="@color/black64"
                android:textSize="@dimen/default_16sp_hf" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:singleLine="true"
                android:textColor="@color/black64"
                android:textColorHint="@color/grayc8"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/default_16sp_hf"
                android:theme="@style/myEditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_30dp_hf"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/btn_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_30dp_hf"
                android:layout_marginRight="@dimen/default_30dp_hf"
                android:background="@drawable/loadagain_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/default_10dp_hf"
                android:paddingTop="@dimen/font_size_level_10"
                android:text="登    录"
                android:textColor="@color/black64"
                android:textSize="@dimen/default_20sp_hf" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>