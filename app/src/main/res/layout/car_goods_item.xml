<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/default_10dp_hf"
        android:paddingLeft="@dimen/default_15dp_hf"
        android:paddingRight="@dimen/default_15dp_hf"
        android:paddingTop="@dimen/default_10dp_hf">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:button="@drawable/shop_cart_checkbox_select"
            android:checked="false"
            android:paddingBottom="@dimen/default_13dp_hf"
            android:paddingRight="@dimen/default_8dp_hf"
            android:paddingTop="@dimen/default_13dp_hf" />

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="@dimen/default_90dp_hf"
            android:layout_height="@dimen/default_90dp_hf"
            android:layout_toRightOf="@+id/checkbox"
            android:background="@color/loading_bg_color"
            android:scaleType="centerCrop"
            android:src="@drawable/pic_default" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_90dp_hf"
            android:layout_marginLeft="@dimen/default_8dp_hf"
            android:layout_toRightOf="@+id/iv_goods">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="名字"
                android:textColor="@color/black"
                android:textSize="@dimen/default_16sp_hf" />

            <!--单价  -->
            <TextView
                android:id="@+id/tv_one_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="¥"
                android:textColor="@color/ff9800"
                android:textSize="@dimen/default_15sp_hf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_reduce_frame"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_14sp_hf" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_reduce_frame"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_14sp_hf" />

                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_reduce_frame"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_14sp_hf" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_dustbin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/dustbin" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_10dp_hf"
        android:background="@color/gray" />

</LinearLayout>
