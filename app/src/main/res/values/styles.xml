<resources>


    <!--<style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.start" parent="AppTheme">
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:windowActionBar">@color/dfc289</item>-->
        <!--<item name="colorPrimary">@color/dfc289</item>-->
    </style>

    <style name="myEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>

    <style name="person_Information_item">
        <item name="android:layout_height">@dimen/my_unopen_person_Information_item</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/default_15dp_hf</item>
        <item name="android:paddingRight">@dimen/default_15dp_hf</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="today_extract_item">
        <item name="android:layout_height">@dimen/default_50dp_hf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/default_15dp_hf</item>
        <item name="android:paddingRight">@dimen/default_15dp_hf</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="character_item">
        <item name="android:layout_height">@dimen/default_80dp_hf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/default_15dp_hf</item>
        <item name="android:paddingRight">@dimen/default_15dp_hf</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="dialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
    </style>

    <style name="introduce_tame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_17sp_hf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/default_2dp_hf</item>
    </style>

    <style name="introduce_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_4dp_hf</item>
        <item name="android:src">@drawable/icon_yiren26x26</item>
    </style>

</resources>
